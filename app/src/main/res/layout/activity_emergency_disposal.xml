<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:fitsSystemWindows="true">

    <!--应急处置-->

    <include
        android:id="@+id/titles"
        layout="@layout/item_tobar_title" />



    <LinearLayout
        android:id="@+id/myTab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/titles"
        android:background="@color/white"
        android:orientation="horizontal"
        android:layout_marginTop="13dp">

        <LinearLayout
            android:id="@+id/new_event"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/new_event_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingBottom="15dp"
                android:text="新事件"
                android:textColor="@color/colorAccent"
                android:textSize="14sp" />

            <View
                android:id="@+id/new_event_line"
                android:layout_width="wrap_content"
                android:layout_height="2dp"
                android:layout_marginLeft="100dp"
                android:layout_marginRight="100dp"
                android:background="@color/colorAccent"
                />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/history_event"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/history_event_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingBottom="15dp"
                android:text="历史事件"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <View
                android:id="@+id/history_event_line"
                android:layout_width="wrap_content"
                android:layout_height="2dp"
                android:layout_marginLeft="100dp"
                android:layout_marginRight="100dp"
                android:background="@color/transparent" />

        </LinearLayout>

    </LinearLayout>
    <include layout="@layout/view_line" />



    <FrameLayout
        android:id="@+id/myFrameLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>


</LinearLayout>